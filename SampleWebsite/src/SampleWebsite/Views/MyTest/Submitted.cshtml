@model SampleWebsite.ViewModels.MyTest.FirstViewModel

@{
    ViewData["Title"] = "Parsley Test";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="MyTest" asp-action="Submitted" method="post" class="form-horizontal" data-parsley-validate="true">
    <h4>This is test for parsley validation</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Field1" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Field1" class="form-control" />
            <span asp-validation-for="Field1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Field2" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Field2" class="form-control" />
            <span asp-validation-for="Field2" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Proceed</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ParsleyValidationScripts"); }
}
